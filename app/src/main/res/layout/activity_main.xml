<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin0"
    android:paddingLeft="@dimen/activity_horizontal_margin0"
    android:paddingRight="@dimen/activity_horizontal_margin0"
    android:paddingTop="@dimen/activity_vertical_margin0"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="pl.janpogocki.hitchhikingcalculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/rlData">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_column="0"
                            android:text="Długość trasy (km):   "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <EditText
                            android:id="@+id/editText"
                            android:layout_column="2"
                            android:layout_weight="0.4"
                            android:ems="10"
                            android:selectAllOnFocus="true"
                            android:enabled="true"
                            android:text="0.0"
                            android:gravity="center"
                            android:inputType="numberDecimal" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_column="0"
                            android:text="Spalanie (l/100 km):"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <EditText
                            android:id="@+id/editText2"
                            android:layout_column="2"
                            android:layout_weight="0.4"
                            android:text="7.0"
                            android:selectAllOnFocus="true"
                            android:gravity="center"
                            android:ems="10"
                            android:inputType="numberDecimal" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_column="0"
                            android:text="Ilość osób:"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <EditText
                            android:id="@+id/editText3"
                            android:layout_column="2"
                            android:layout_weight="0.4"
                            android:text="1"
                            android:selectAllOnFocus="true"
                            android:gravity="center"
                            android:ems="10"
                            android:inputType="number" />
                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/tableLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tableLayout">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_column="0"
                            android:layout_gravity="center_horizontal"
                            android:text="Ceny paliw\nz internetu"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <Switch
                            android:id="@+id/switch1"
                            android:layout_column="18"
                            android:layout_weight="1"
                            android:checked="true"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:text="Ładowanie..." />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/tableLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tableLayout2">

                    <TableLayout
                        android:id="@+id/tableLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/tableLayout2"
                        android:visibility="gone">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_column="0"
                                android:gravity="center_vertical"
                                android:text="Cena paliwa (zł/l):      "
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <EditText
                                android:id="@+id/editText4"
                                android:layout_column="2"
                                android:layout_weight="0.1"
                                android:text="3.5"
                                android:selectAllOnFocus="true"
                                android:gravity="center"
                                android:ems="10"
                                android:inputType="numberDecimal" />

                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:id="@+id/tableLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/tableLayout2"
                        android:visibility="visible">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.2"
                                android:text="Gatunek paliwa:"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_column="2"
                                android:layout_weight="0.4"
                                android:entries="@array/gatunki_paliwa" />
                        </TableRow>
                    </TableLayout>
                </TableLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:textColor="@color/colorWhite"
            android:text="0.0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAlmostWhite"
            android:text="PLN / OS."
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_location_start" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="5dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorPrimaryDark"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7200725979200234/2509752468" />



</LinearLayout>
